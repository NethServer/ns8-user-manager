{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":maintainLockFilesMonthly",
    ":disableDependencyDashboard",
    ":disableRateLimiting"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "<= 24",
      "schedule": [
        "* * 1-7 * 2"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "rangeStrategy": "replace"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
